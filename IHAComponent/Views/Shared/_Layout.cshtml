<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Embedded Stock Admin</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
<div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="row">
            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                <a href="@Url.Action("Index", "Home")">
                    <img src="/Images/IHA-Logo.png" height="50" style="margin-top: 0.8em;">
                </a>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-5 col-lg-6">
                <h2>Embedded Stock Admin for ASE</h2>
            </div>
            <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
        <div class="row">
            <div class="col-xs-4 col-sm-4 col-md-5 col-lg-4"></div>
            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-3">
                <form action="@Url.Action("Index", "Components")" class="input-group" method="get">
                    <input class="form-control" id="searchString" name="searchString" placeholder="Søg komponenter..." type="text" value="">
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-default">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>
                </form>
            </div>
            <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5"></div>
        </div>
    </div>
</div>



<div class="container body-content">
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year - Embedded Stock Admin</p>
    </footer>
</div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
