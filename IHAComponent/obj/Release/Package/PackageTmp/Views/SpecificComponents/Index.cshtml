@model IEnumerable<IHAComponent.Models.SpecificComponent>

@{
    ViewBag.Title = "Komponent -og serienr.";
}

<h2>Komponent -og serienr.</h2>

<p>
    @Html.ActionLink("Tilføj ny", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Component1.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SerieNr)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Component1.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SerieNr)
        </td>
        <td>
            @Html.ActionLink("Rediger", "Edit", new {id = item.Id}) |
            @Html.ActionLink("Detaljer", "Details", new {id = item.Id}) |
            @Html.ActionLink("Slet", "Delete", new {id = item.Id})
        </td>
    </tr>
}

</table>
